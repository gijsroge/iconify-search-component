{
  "name": "iconify-search",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run package:build && next dev --turbopack",
    "build": "bun run package:build && next build",
    "start": "next start",
    "registry:build": "shadcn build",
    "package:build": "cd packages/iconify-search && bun run build",
    "typecheck": "tsc --noEmit",
    "test": "cd packages/iconify-search && bun run test",
    "publish:package": "cd packages/iconify-search && bun run build && bun publish"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@gijsroge/iconify-search": "workspace:*",
    "@iconify/types": "^2.0.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/pacer": "^0.18.0",
    "@tanstack/react-pacer": "^0.19.4",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-virtual": "^3.13.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "15.5.12",
    "radix-ui": "^1.4.3",
    "react": "19.1.5",
    "react-dom": "19.1.5",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.19.11",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3"
  }
}
