{
  "name": "@gijsroge/iconify-search",
  "version": "0.1.2",
  "description": "Renderless component for Iconify icon search. Build custom UIs with search state, grouping, and selection via render props.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "@tanstack/react-query": ">=5",
    "@tanstack/react-pacer": ">=0.18"
  },
  "dependencies": {
    "@iconify/types": "^2.0.0"
  },
  "devDependencies": {
    "@tanstack/react-pacer": "^0.19.0",
    "@tanstack/react-query": "^5.90.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "jsdom": "^28.0.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "iconify",
    "icon",
    "search",
    "react",
    "renderless"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
